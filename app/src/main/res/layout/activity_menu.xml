<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41A5E9"
    tools:context=".Menu">

    <TextView
        android:id="@+id/viewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:text="@string/menu_welcome"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/menuID"
        android:layout_width="339dp"
        android:layout_height="86dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Disconnect"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/viewWelcome"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnQR230"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_type1"
        android:text="@string/menu_btn02"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuID" />

</androidx.constraintlayout.widget.ConstraintLayout>